<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Book" table="book" schema="bookstore">
        <id name="id" column="id"/>
        <property name="bookname" column="bookname"/>
        <property name="price" column="price"/>
        <property name="author" column="author"/>
        <property name="amount" column="amount"/>
        <property name="saleAmount" column="sale_amount"/>
        <property name="introduction" column="introduction"/>
        <property name="imagePath" column="image_path"/>
        <property name="type" column="type"/>
    </class>
</hibernate-mapping>