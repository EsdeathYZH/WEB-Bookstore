<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Order" table="orders" schema="bookstore">
        <id name="orderId" column="order_id"/>
        <property name="userId" column="user_id"/>
        <property name="bookId" column="book_id"/>
        <property name="amount" column="amount"/>
        <property name="address" column="address"/>
        <property name="time" column="time"/>
        <property name="receiver" column="receiver"/>
        <property name="bookname" column="bookname"/>
        <property name="imagePath" column="image_path"/>
        <property name="bookprice" column="bookprice"/>
    </class>
</hibernate-mapping>